{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "lib": [
            "esnext",
            "es2015.promise",
            "dom"
        ],
        "outDir": "./build",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "lib.d.ts",
        "@hansogj/array.utils"
    ],
    "exclude": [
        "node_modules",
        "**/__mocks__"
    ]
}