{
    "name": "music-utils",
    "version": "1.0.0",
    "description": "music tools for my flac & mp3 collection",
    "main": "",
    "scripts": {
        "clear": "rm -rf ./build  ./build.ci  ./test-data/copy ",
        "format:check": "prettier --config ./.prettierrc.json --list-different 'src/**/*.ts'",
        "format:fix": "npm run format:check --  --write",
        "format:lint:fix": "npm run lint -- --fix && npm run format:fix",
        "lint": "eslint . --ext .tsx --ext .ts",
        "sync_test_data": "rsync -a ./test-data/raw/* ./test-data/copy",
        "tsc": "tsc",
        "tsc:ci": "tsc --project ./tsconfig.ci.json",
        "pretest": "run-s clear sync_test_data tsc",
        "ci": "run-s pretest __tag-flac __tag-mp3",
        "ci:prompt": "run-s  clear tsc:ci  && node build.ci/ci/prompt/index.js",
        "jest": "npx jest --runInBand --detectOpenHandles --colors --verbose --reporters=default",
        "jest:ci": "npx jest --ci --runInBand --silent --colors --coverage",
        "jest:watch": "npm run jest -- --watch"
    },
    "keywords": [
        "music",
        "flac",
        "mp3"
    ],
    "author": "hansogj@gmail.com",
    "license": "UNLICENSED",
    "dependencies": {
        "@types/prompts": "^2.0.8",
        "array.defined": "^2.4.1",
        "array.flatmap": "^1.1.0",
        "array.onempty": "^1.4.0",
        "chalk": "^4.1.0",
        "jest": "^26.4.2",
        "jest-junit": "^11.1.0",
        "prettier": "^2.1.1",
        "prompts": "^2.3.2",
        "ts-jest": "^26.3.0",
        "ts-node-dev": "^1.0.0-pre.62",
        "typescript": "^4.0.2"
    },
    "devDependencies": {
        "@types/node": "^14.6.4",
        "@typescript-eslint/eslint-plugin": "^4.1.0",
        "@typescript-eslint/parser": "^4.1.0",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "18.0.1",
        "eslint-config-prettier": "^6.10.1",
        "eslint-loader": "^2.1.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.3",
        "eslint-plugin-react-hooks": "^1.7.0",
        "eslint-plugin-simple-import-sort": "^5.0.2",
        "npm-run-all": "^4.1.5",
        "reflect-metadata": "^0.1.13",
        "winston": "^3.3.3"
    }
}
